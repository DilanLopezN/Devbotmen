{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",        // ‚Üê CommonJS para preload
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist-electron",
    "rootDir": "./electron",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["electron/preload.ts"]
}